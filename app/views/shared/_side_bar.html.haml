.left
  .left__top
    .left__top--box
      %b.left__top--box--user
        =current_user.name
      %ul.left__top--box--button
        %li.left__top--box--button--edit
          =link_to new_group_path do
            =fa_icon 'edit lg',class:"link"
        %li.left__top--box--button--cog
          =link_to edit_user_path(current_user) do
            =fa_icon 'cog lg',class:"link"
  .left__sidebar
    -current_user.groups.each do |group|
      .left__sidebar--post
        =link_to group_messages_path(group),class:"link" do
          .left__sidebar--post--group
            =group.name
          .left__sidebar--post--last
            =group.show_last_message